<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Update user</title>
    <link rel="stylesheet" href="/css/style.css" type="text/css" />
  </head>
  <body>
    <div class="update-user-container">
      <form action="/update" method="post">
        <div>
          <label>First Name</label>
          <input
            name="firstName"
            type="text"
            value="<%= dataUser.firstName %>"
          />
        </div>
        <div>
          <label>Last Name</label>
          <input name="lastName" type="text" value="<%= dataUser.lastName %>" />
        </div>
        <div>
          <label>Email</label>
          <input name="email" type="email" value="<%= dataUser.email %>" />
        </div>
        <div>
          <label>Address</label>
          <input name="address" type="text" value="<%= dataUser.address %>" />
        </div>
        <input name="id" type="text" value="<%= dataUser.id %>" hidden />
        <div>
          <button type="submit" class="btn-save">Save</button>
        </div>
      </form>
    </div>
  </body>
</html>
